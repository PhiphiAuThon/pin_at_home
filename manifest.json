{
  "manifest_version": 3,
  "name": "Pin@Home",
  "version": "1.0.0",
  "description": "Transform your Pinterest board into a clean, curated dashboard.",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.pinterest.com/*",
    "https://www.pinterest.fr/*",
    "https://www.pinterest.co.uk/*",
    "https://www.pinterest.ca/*",
    "https://www.pinterest.de/*",
    "https://www.pinterest.jp/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.pinterest.com/*",
        "https://www.pinterest.fr/*",
        "https://www.pinterest.co.uk/*",
        "https://www.pinterest.ca/*",
        "https://www.pinterest.de/*",
        "https://www.pinterest.jp/*"
      ],
      "js": ["src/loader.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/*.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
